#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ { \
  behaviors { \
    hold_tap: hold_tap {
      compatible = "zmk,behavior-hold-tap";
      label = "HOLD_TAP";
      #binding-cells = <2>;
      tapping_term_ms = <U_TAPPING_TERM>;
      quick_tap_ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
  };
};

#define HOLD_TAP(hold, tap) &hold_tap hold tap
